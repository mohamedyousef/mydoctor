<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:id="@+id/root"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#f2f2f2"
    tools:context=".Fragments.LoginAndSignUpFragment">

    <ImageView
        android:layout_width="match_parent" android:id="@+id/logoa"
        android:layout_height="120dp"  android:layout_marginTop="10dp"
        android:src="@drawable/logo"  android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoa"
        android:layout_marginTop="5dp"
        android:id="@+id/title"
        android:text="My Doctor"
        android:textColor="@color/darkgray"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/odin"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@+id/title"
        android:textAlignment="center" android:textSize="15sp"
        android:text="Helath care Mobile App " />

    <com.firebase.ui.auth.util.ui.SupportVectorDrawablesButton
        android:layout_width="match_parent" android:layout_below="@+id/textView"
        android:text="@string/fui_sign_in_with_phone_number"
        android:layout_marginTop="25dp" android:layout_marginRight="30dp"  android:layout_marginBottom="6dp"
        android:layout_marginLeft="30dp"  android:id="@+id/phone_button" android:background="@color/colordarkblue"
        android:layout_height="wrap_content"  style="@style/FirebaseUI.Button.AccountChooser.PhoneButton"/>

    <com.firebase.ui.auth.util.ui.SupportVectorDrawablesButton
        android:id="@+id/google_btn"
        android:layout_width="match_parent" android:layout_below="@+id/phone_button"
        android:layout_marginRight="30dp" android:text="@string/fui_sign_in_with_google"
        android:layout_marginLeft="30dp" android:layout_marginTop="5dp"
        android:layout_height="wrap_content"  style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"/>


</RelativeLayout>
