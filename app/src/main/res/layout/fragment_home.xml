<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="192dp"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
            app:toolbarId="@+id/toolbar">

            <ImageView
                android:id="@+id/app_bar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/banner"
                app:layout_collapseMode="parallax"
                />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1" android:layout_marginRight="1dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/colordarkblue"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_a"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/img_doc"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:padding="10dp"
                        android:src="@drawable/doctor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_doc"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/hacencasablancaheavy"
                        android:text="@string/scanbycamera"
                        android:textAlignment="center"
                        android:textColor="#f1f1f1"
                        android:padding="1dp"
                        android:textSize="22sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true" android:layout_marginLeft="1dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/colorNavText"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_go_quiz"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/img_doc2"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:padding="12dp"
                        android:src="@drawable/question" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_doc2"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/hacencasablancaheavy"
                        android:text="@string/scanbyquetions"
                        android:textAlignment="center"
                        android:textColor="#f1f1f1" android:padding="1dp"
                        android:textSize="22sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="1dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:id="@+id/btn_go_advices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/img_doc4"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:padding="12dp"
                        android:src="@drawable/shape_incoming_message" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_doc4"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/hacencasablancaheavy"
                        android:padding="1dp"
                        android:text="نصائح للتعامل مع الامراض"
                        android:textAlignment="center"
                        android:textColor="#f1f1f1"
                        android:textSize="22sp" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
