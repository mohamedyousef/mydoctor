<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/progress_loading"
        android:layout_centerInParent="true" android:orientation="vertical"
        android:layout_height="wrap_content">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hacencasablancaheavy"
        android:layout_marginTop="50dp"
        android:textAlignment="center" android:textColor="#333"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:text="انتظر حتي يتم اكتمال تحميل البيانات"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent" android:background="#f2f2f2"
        android:layout_height="match_parent" android:id="@+id/questionslist">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>