<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:id="@+id/root5"
    android:orientation="vertical"
    android:layout_height="wrap_content" >

          <TextView
               android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:id="@+id/numtitle"     android:textAlignment="center"
              android:textColor="#000"
              android:text="@string/app_name"
              android:textSize="21sp" />


      <LinearLayout
          android:id="@+id/root"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal" android:gravity="center"
          android:layout_marginTop="15dp" >

          <TextView
              android:id="@+id/timeof"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/green"
              android:fontFamily="@font/hacencasablancaheavy"
              android:textSize="18sp" android:gravity="end"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/tome"
               android:text="الوقت :"
               android:textColor="#000" android:layout_marginRight="20px"  android:fontFamily="@font/hacencasablancaheavy"
              android:textSize="19sp"  />


          <TextView
              android:id="@+id/distanceof"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:textSize="18sp"
              android:gravity="end" />

          <TextView
              android:id="@+id/dis"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:text="المسافة : "
              android:fontFamily="@font/hacencasablancaheavy"
               android:textColor="#000"
              android:textSize="19sp" />


      </LinearLayout>

  </LinearLayout>