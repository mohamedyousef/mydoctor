<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MessageFragment">

    <android.support.design.widget.AppBarLayout android:id="@+id/tool8"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent"  android:layout_below="@+id/tool8">

    <ImageView
        android:layout_width="match_parent" android:scaleType="centerCrop"
        android:layout_height="300dp" android:id="@+id/img_show_"  android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent" android:id="@+id/thre"
        android:layout_height="wrap_content"  android:text="النتيجة"  android:textAlignment="center" android:textSize="26sp"
        android:background="@color/colorNavText" android:textColor="#fff"
          />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/msg_text"
        android:text="190@gmohamed" android:textAlignment="center"
        android:textSize="21sp" android:textColor="#333"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>