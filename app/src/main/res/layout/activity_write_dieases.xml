<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f1f1f1"
    tools:context=".WriteDieasesActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent" app:cardCornerRadius="5dp"
        android:layout_height="wrap_content" android:layout_margin="10dp">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="اكتب العرض هنا"
        android:padding="10dp"
        android:textStyle="bold" android:textAlignment="center"
        android:textSize="21sp" android:textColor="#000" android:textColorHint="#999"
        android:fontFamily="@font/hacencasablancaheavy"
        android:background="@color/transparent"
       />


    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content" android:layout_below="@+id/card" android:id="@+id/btn_add_die"
        android:layout_height="wrap_content" android:background="@drawable/card" android:textColor="#fff"
        android:text="اضف " android:fontFamily="@font/hacencasablancaheavy" android:textSize="16sp"
        android:layout_alignParentEnd="true" android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" android:onClick="BuAddListview"
        tools:ignore="OnClick" />

    <ListView
        android:layout_width="match_parent"
        android:layout_below="@+id/btn_add_die"
        android:layout_height="match_parent"
        android:id="@+id/list_a3rad"
        android:layout_above="@+id/send_diease"
       />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/card" android:textColor="#fff"
        android:text="ارسال"  android:onClick="buOnSend" android:id="@+id/send_diease"
        android:textStyle="bold"
        tools:ignore="OnClick" android:layout_alignParentBottom="true"  android:textSize="16sp" android:fontFamily="@font/hacencasablancaheavy"/>

</RelativeLayout>