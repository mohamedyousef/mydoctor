<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <EditText
        android:layout_width="match_parent" android:hint="اكتب اسمك هنا"
        android:background="@drawable/card_white" android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/user_name_txt" android:layout_marginTop="50dp"
        android:fontFamily="@font/hacencasablancaheavy" android:textSize="18sp" android:padding="10dp"
        android:layout_height="wrap_content" android:textColor="#222"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content" android:onClick="bu_finish" android:layout_marginTop="15dp"
        android:layout_height="wrap_content" android:layout_below="@id/user_name_txt" android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" android:padding="10dp" android:fontFamily="@font/hacencasablancaheavy"
        android:text="انهاء"  android:background="@drawable/card" android:textColor="#fff"
        tools:ignore="OnClick" />
</RelativeLayout>