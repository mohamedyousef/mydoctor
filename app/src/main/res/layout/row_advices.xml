<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical" android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/banneraldpi"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/title_advice"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hacencasablancaheavy"
            android:padding="10dp"
            android:text="مرض السرطان"
            android:textAlignment="center"
            android:textColor="#233"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btn_advices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/card"
            android:fontFamily="@font/hacencasablancaheavy"
            android:text="اختر"
            android:textColor="#fff"
            android:textSize="21sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>